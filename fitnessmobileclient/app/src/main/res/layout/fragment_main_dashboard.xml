<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/caloriesBar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:indicatorSize="130dp"
            app:trackThickness="10dp"
            app:indicatorColor="@color/material_purple_500"
            app:trackColor="@color/progress_bar_grey"
            app:trackCornerRadius="4dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/proteinBar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="48dp"
            app:indicatorColor="@color/material_purple_500"
            app:trackColor="@color/progress_bar_grey"
            app:trackCornerRadius="4dp"
            app:indicatorSize="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:trackThickness="10dp" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/carbohydratesBar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            app:indicatorColor="@color/material_purple_500"
            app:trackColor="@color/progress_bar_grey"
            app:trackCornerRadius="4dp"
            app:indicatorSize="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caloriesBar"
            app:trackThickness="10dp" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/fatBar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            app:indicatorColor="@color/material_purple_500"
            app:trackColor="@color/progress_bar_grey"
            app:trackCornerRadius="4dp"
            app:indicatorSize="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/proteinBar"
            app:trackThickness="10dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addMealButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/baseline_add_24"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/caloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/caloriesBar"
            app:layout_constraintEnd_toEndOf="@+id/caloriesBar"
            app:layout_constraintStart_toStartOf="@+id/caloriesBar"
            app:layout_constraintTop_toTopOf="@+id/caloriesBar" />

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/proteinBar"
            app:layout_constraintEnd_toEndOf="@+id/proteinBar"
            app:layout_constraintStart_toStartOf="@+id/proteinBar"
            app:layout_constraintTop_toTopOf="@+id/proteinBar" />

        <TextView
            android:id="@+id/carbsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/carbohydratesBar"
            app:layout_constraintEnd_toEndOf="@+id/carbohydratesBar"
            app:layout_constraintStart_toStartOf="@+id/carbohydratesBar"
            app:layout_constraintTop_toTopOf="@+id/carbohydratesBar" />

        <TextView
            android:id="@+id/fatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/fatBar"
            app:layout_constraintEnd_toEndOf="@+id/fatBar"
            app:layout_constraintStart_toStartOf="@+id/fatBar"
            app:layout_constraintTop_toTopOf="@+id/fatBar" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Calories"
            app:layout_constraintBottom_toTopOf="@+id/caloriesBar"
            app:layout_constraintEnd_toEndOf="@+id/caloriesBar"
            app:layout_constraintStart_toStartOf="@+id/caloriesBar" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Protein"
            app:layout_constraintBottom_toTopOf="@+id/proteinBar"
            app:layout_constraintEnd_toEndOf="@+id/proteinBar"
            app:layout_constraintStart_toStartOf="@+id/proteinBar" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Carbohydrates"
            app:layout_constraintBottom_toTopOf="@+id/carbohydratesBar"
            app:layout_constraintEnd_toEndOf="@+id/carbohydratesBar"
            app:layout_constraintStart_toStartOf="@+id/carbohydratesBar" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Fat"
            app:layout_constraintBottom_toTopOf="@+id/fatBar"
            app:layout_constraintEnd_toEndOf="@+id/fatBar"
            app:layout_constraintStart_toStartOf="@+id/fatBar" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addMealButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>