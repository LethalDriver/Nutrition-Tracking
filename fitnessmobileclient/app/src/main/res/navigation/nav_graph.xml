<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mwdziak.fitness_mobile_client.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.mwdziak.fitness_mobile_client.fragment.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_updateGoalsFragment"
            app:destination="@id/updateGoalsFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateGoalsFragment"
        android:name="com.mwdziak.fitness_mobile_client.fragment.UpdateGoalsFragment"
        android:label="fragment_update_goals"
        tools:layout="@layout/fragment_update_goals" />
</navigation>